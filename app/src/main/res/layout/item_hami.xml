<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hami_height"
    android:layout_marginStart="@dimen/bazaarche_sides"
    android:layout_marginEnd="@dimen/bazaarche_sides"
    android:layout_marginBottom="@dimen/bazaarche_sides"
    app:cardCornerRadius="8dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/imageHami"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hami_image_width"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textHamiTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black_color"
        tools:text="بازارچه چیست؟" />

    <TextView
        android:id="@+id/textHamiDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:ellipsize="end"
        android:textColor="#666666"
        tools:text="بازارچه برنامه ایست که امکان انجام خرید سکه و
امکانات ویژه بازی و برنامه خارجی را از طریق
پرداخت با کارت‌های بانکی فراهم آورده است." />

    <TextView
        android:id="@+id/textHamiMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/bazaarche_sides"
        android:layout_marginEnd="@dimen/bazaarche_sides"
        android:layout_marginBottom="14dp"
        android:text="@string/more_info"
        android:textColor="@color/bazaarche_green" />


  </LinearLayout>
</androidx.cardview.widget.CardView>