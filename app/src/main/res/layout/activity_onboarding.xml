<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:id="@+id/wallet_creation_animation"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#d9000000"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone"
      >
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/create_wallet_animation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:lottie_enableMergePathsForKitKatAndAbove="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/create_wallet_loading_animation"
        />

    <TextView
        android:id="@+id/create_wallet_text"
        style="@style/TextAppearance.AppCompat.Body1.Roboto.Medium.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/provide_wallet_creating_wallet_header"
        />
  </LinearLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/onboarding_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/activity_background_color"
      >

    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@id/animation_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/onboarding_image_background_color"
        tools:src="@drawable/ic_joystick"
        />

    <com.rd.PageIndicatorView
        android:id="@+id/page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboarding_image"
        app:piv_animationType="none"
        app:piv_count="2"
        app:piv_padding="30dp"
        app:piv_radius="4dp"
        app:piv_selectedColor="@color/selection_dot_selected"
        app:piv_unselectedColor="@color/selection_dot_unselected"
        app:piv_viewPager="@id/onboarding_viewpager"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/onboarding_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@id/text_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/animation_guideline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_guideline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70"
        />

    <Button
        android:id="@+id/been_invited_bonus"
        style="@style/ButtonStyle.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:minWidth="64dp"
        android:minHeight="36dp"
        android:text="@string/referral_onboarding_redeem_button"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_viewpager"
        />

    <TextView
        android:id="@+id/terms_conditions_warning"
        style="@style/OnboardingTermsConditionsTextStyle.Warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="@string/terms_and_conditions_error"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/been_invited_bonus"
        />

    <LinearLayout
        android:id="@+id/terms_conditions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/terms_conditions_warning"
        >
      <CheckBox
          android:id="@+id/onboarding_checkbox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:buttonTint="@color/selection_dot_selected"
          />
      <TextView
          android:id="@+id/terms_conditions_body"
          style="@style/OnboardingTermsConditionsTextStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:clickable="true"
          android:focusable="true"
          android:gravity="start"
          tools:text="@string/terms_and_conditions_tickbox"
          />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="@dimen/intro_button_height"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:text="@string/continuation"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        app:backgroundTint="@drawable/onboarding_continue_button_selector"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="320dp"
        />

    <Button
        android:id="@+id/next_button"
        style="@style/ButtonStyle.Alternative"
        android:layout_width="120dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="20dp"
        android:text="@string/action_next"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/terms_conditions_layout"
        />

    <Button
        android:id="@+id/skip_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:maxWidth="126dp"
        android:minWidth="80dp"
        android:text="@string/skip_with_arrow"
        android:textColor="@color/btn_cancel_text"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboarding_viewpager"
        />


  </androidx.constraintlayout.widget.ConstraintLayout>

  <include
      android:id="@+id/layout_validation_no_internet"
      layout="@layout/layout_validation_no_internet"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_centerInParent="true"
      android:visibility="gone"
      />
</RelativeLayout>