<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <ImageView
      android:id="@+id/imageSource"
      android:layout_width="@dimen/source_image_size"
      android:layout_height="@dimen/source_image_size"
      android:paddingStart="@dimen/default_margin_double"
      android:paddingEnd="@dimen/default_margin"
      android:scaleType="fitCenter"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@drawable/ic_transaction_peer"
      />


  <ImageView
      android:id="@+id/imageTransactionType"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:background="@drawable/transaction_icon_background"
      android:padding="@dimen/default_margin_half"
      android:layout_marginTop="6dp"
      android:layout_marginEnd="@dimen/default_margin_half"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="@id/imageSource"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@drawable/ic_transaction_poa"
      />

  <TextView
      android:id="@+id/textAddress"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/default_margin_double"
      android:layout_marginTop="@dimen/default_margin_one_and_half"
      android:ellipsize="end"
      android:maxLines="1"
      android:textAlignment="viewStart"
      android:textColor="@color/transaction_item_text_color"
      android:textSize="14sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/imageSource"
      app:layout_constraintTop_toTopOf="@id/imageSource"
      tools:text="0xDEADBEEFDEADBEEFDEADBEEFDEADBEEFD"
      />

  <TextView
      android:id="@+id/textDescription"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/default_margin_double"
      android:ellipsize="end"
      android:layout_marginBottom="@dimen/default_margin_one_and_half"
      android:maxLines="1"
      android:textAlignment="viewStart"
      android:textColor="@color/transaction_item_snd_text_color"
      android:textSize="@dimen/bazaarche_small_text"
      app:layout_constraintBottom_toBottomOf="@id/imageSource"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/imageSource"
      app:layout_constraintTop_toBottomOf="@id/textAddress"
      tools:text="0xDEADBEEFDEADBEEFDEADBEEFDEADBEEFD"
      />

</androidx.constraintlayout.widget.ConstraintLayout>